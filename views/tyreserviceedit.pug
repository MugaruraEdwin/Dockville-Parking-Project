  .divider2
    .clinic-top
      h2.top Tyre Services
      hr
      h4.action Select Service
    #register.container-fluid
      h4 Check tyre service needed 
      form#servicesform(name='servicesform' method='POST' action='/api/tyreservice/edit?id='+service._id onsubmit='return Validate(event)')
        .form-group
          label(for='firstname') First Name
          input#firstname.form-control(type='text' placeholder="Enter driver's first name" name='firstname' value=service.firstname)
          // first name error
          span#firstnameerror
        br
        .form-group
          label(for='lastname') Last Name 
          input#lastname.form-control(type='text' placeholder="Enter driver's last name" name='lastname' value=service.lastname)
          // last name error
          span#lastnameerror
        br
        .form-group
          label(for='email') Email
          input#email.form-control(type='email' name='email' value=service.email)
          span#emailerror
        br
        .form-group
          label(for='Date') Date
          input#date.form-control(type='date' name='date' value=service.date)
        span#dateerror
        br
        .form-group
          label(for='phonenumber') Phone Number
          input#phonenumber.form-control(type='tel' name='phonenumber' value=service.phonenumber)
          span#phonenumbererror
        label(for='tyreservice-select') Select Tyre Service
        .form-check
          input#pressure.form-check-input(type='checkbox' name='tyreservice' value='pressure' checked=(service.tyreservice.includes('pressure')))
          label.form-check-label(for='pressure') Tire Pressure
        br
        .form-check
          input#puncture.form-check-input(type='checkbox' name='tyreservice' value='puncture' checked=(service.tyreservice.includes('puncture')))
          label.form-check-label(for='puncture') Puncture fixing
        br
        .form-check
          input#valves.form-check-input(type='checkbox' name='tyreservice' value='valves' checked=(service.tyreservice.includes('valves')))
          label.form-check-label(for='valves') Valves
        br
        .form-group
          label(for='total') 
          input#totalinput.form-control(type='number' name='total' style="display: none;" value=service.total)
        // <p id="total" name="total"></p>
        br
        button#submit.btn.btn-primary.form-width(type='submit' name='submit') Update
