  .divider2
    #register.container-fluid
      h3#begin Register Automobile 
      br
      form#truckregister(action='/api/regparker' onsubmit='return Validate(event);' name='truckregister' method='POST')
        .form-group
          label(for='firstname') 
            | First Name
            span.red   *
          input#firstname.form-control(type='text' placeholder="Enter driver's first name" name='firstname')
          // first name error
          span#firstnameerror
        br
        .form-group
          label(for='lastname') 
            | Last Name
            span.red   *
          input#lastname.form-control(type='text' placeholder="Enter driver's last name" name='lastname')
          // last name error
          span#lastnameerror
        br
        .form-group
          label(for='numberplate')
            | Number Plate
            span.red   *
          input#numberplate.form-control(type='text' placeholder='Enter Number Plate' name='numberplate')
          // number plate error
          span#numberplateerror
        br
        span.red   *
        select.form-select(aria-label='Default select example' name='color')
          option(value='') Select car color
          option(value='red') Red
          option(value='yellow') Yellow
          option(value='green') Green
          option(value='blue') Blue
          option(value='purple') Purple
          option(value='white') White
          option(value='orange') Orange
          option(value='black') Black
          option(value='brown') Brown
          option(value='grey') Grey
        span#colorerror
        br
        .form-group
          label(for='email') 
            | Email
            span.red   *
          input#email.form-control(type='email' name='email')
          span#emailerror
        br
        span.red   *
        select#model.form-select(aria-label='Default select example' name='model')
          option(value='') Select Automobile model
          option(value='hactchback') Hatch Back
          option(value='sedan') Sedan
          option(value='suv') SUV
          option(value='coupe') Coupe
          option(value='convertible') Convertible
          option(value='sportscar') Sports Car
          option(value='minivan') Mini Van
          option(value='stationwagon') Station Wagon
          option(value='crossover') Cross Over
          option(value='pickuptruck') Pickup Truck
        span#modelerror
        br
        .form-group
          label(for='timeofarrival') 
            | Time of Arrival
            span.red   *
          input#time.form-control(type='time' name='time')
        span#timeerror
        br
        span.red   *
        select.form-select(aria-label='Default select example' name='type')
          option(value='') Select Automobile type
          option(value='truck') Truck
          option(value='taxi') Taxi
          option(value='personalcar') Personal Car
          option(value='coaster') Coaster
          option(value='bodaboda') BodaBoda
        span#typeerror
        br
        .form-group
          label(for='Date') 
            | Date
            span.red   *
          input#date.form-control(type='date' name='date')
        span#dateerror
        br
        .form-group
          label(for='securitykey') 
            | Security Key
            span.red   *
          input#securitykey.form-control(type='text' placeholder="Enter driver's security key" name='securitykey')
          // security key error
          span#securitykeyerror
        br
        .form-group
          label(for='phonenumber') 
            | Phone Number
            span.red   *
          input#phonenumber.form-control(type='tel' name='phonenumber')
          span#phonenumbererror
        br
        span.red   *
        select.form-select(aria-label='Default select example' name='park')
          option(value='') Select time for parking
          option(value='day') Day
          option(value='night') Night
          option(value='lessthanthreehours') Less than three hours
        span#parkerror
        br
        .form-group
          label(for='receiptnumber')
          input#receiptnumber.form-control(type='text' name='receiptnumber' style="display: none;")
          //- span#receiptnumbererror
        .form-group
          label(for='total') 
          input#totalinput.form-control(type='number' name='total' style="display: none;")
        // <p id="total" name="total"></p>
        br
        button.btn-primary.btn.form-width(type='submit' name='submit') Register Parker
