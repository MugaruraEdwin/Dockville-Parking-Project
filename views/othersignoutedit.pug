    #register.container-fluid
      h3#begin Other SignOut 
       if error
        p#perror.error= error
      form#signout(action='/api/othersignout/edit?id='+parker._id method='POST' name='signouts' onsubmit='return Validate(event);')
        .form-group
          label(for='firstname') First Name
          input#firstname.form-control(type='text' placeholder="Enter driver's first name" name='firstname' value=parker.firstname)
          // first name error
          span#firstnameerror
        br
        .form-group
          label(for='lastname') Last Name
          input#lastname.form-control(type='text' placeholder="Enter driver's last name" name='lastname' value=parker.lastname)
          // last name error
          span#lastnameerror
        br
        //- .form-group
