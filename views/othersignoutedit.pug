        .form-group
          label(for='phonenumber') Phone Number
          input#phonenumber.form-control(type='tel' name='phonenumber' value=parker.phonenumber)
        span#phonenumbererror
        br
        .form-group
          label(for='time') Time 
          input#time.form-control(type='time' name='time' value=parker.time)
        span#timeerror
        br
        .form-group
          label(for='Date') Date
          input#date.form-control(type='date' name='date' value=parker.date)
        span#dateerror
        br
        select#gender.form-select(aria-label='Gender' name='gender')
          option(value='') Gender
          option(value='male' selected=(parker.gender === 'male') ) Male
          option(value='female' selected=(parker.gender === 'female') ) Female
        span#gendererror
        br
        .form-group
          label(for='nin') NIN Number
          input#nin.form-control(type='text' placeholder='Enter NIN number' name='nin' value=parker.nin)
        span#ninerror
        br
        button.btn-primary.btn.form-width(type='submit' name='submit') Update
